\setbeamertemplate{background canvas}{%
  \ifnum\c@framenumber=1%
  \includegraphics[width=\paperwidth,height=\paperheight]{tria.png}%
  \else%
    \ifx\insertframetitle\@empty%
    \includegraphics[width=\paperwidth,height=\paperheight]{tria_bw_notitle.png}%
    \else%
    \includegraphics[width=\paperwidth,height=\paperheight]{tria_bw.png}%
    \fi%
  \fi%
}

% Title page
\defbeamertemplate*{title page}{Littleitaly}[1][]
{ 
  \centering
  \pgfsetfillopacity{0.75}
  \vskip2.2cm%
  \begin{beamercolorbox}[wd=\the\paperwidth,center,sep=4pt,#1]{title}
    \pgfsetfillopacity{1}
     \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
    \vskip0.75cm%
    \pgfsetfillopacity{0.75}
    \begin{beamercolorbox}[wd=\the\paperwidth,sep=4pt,center,#1]{author}
    	\pgfsetfillopacity{1}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
     \vskip0.2cm%
     \pgfsetfillopacity{0.75}
    \begin{beamercolorbox}[wd=\the\paperwidth,sep=4pt,center,#1]{date}
    	\pgfsetfillopacity{1}
      \usebeamerfont{author}\insertdate%
    \end{beamercolorbox}
  \vfill
}


